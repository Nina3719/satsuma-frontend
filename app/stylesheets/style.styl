@require "helpers"
@require "table"

.error-message
    visibility hidden
    color red
    font-weight bold
    text-align left
    padding 1rem 0
.modal
    display none
    position fixed
    left 0
    top 0
    z-index 100
    width 100%
    height 100%
    overflow auto
    background-color #000
    background-color rgba(0, 0, 0, .5)
.modal-content
    max-width 90%
    margin 10% auto
    padding 2rem
    border 1px solid #888
    background-color white
    border-radius 5px
    text-align center

text-color = #000
mobile-width = 600px

body
  margin 0
  padding 0
  font-family Helvetica, "Trebuchet MS"

#navbar
  position fixed
  font-weight bold
  top 0
  left 0
  margin-bottom 50px
  width calc(100% - 40px)
  padding 20px
  overflow hidden
  text-decoration none
  background #7d7e7d
  background -moz-linear-gradient(top, #7d7e7d 0%, #0e0e0e 100%)
  background -webkit-linear-gradient(top, #7d7e7d 0%,#0e0e0e 100%)
  background linear-gradient(to bottom, #7d7e7d 0%,#0e0e0e 100%)

#nba:hover
  opacity 0.8
  cursor pointer
  color red
  margin-left -20px
  padding-left 20px
  padding-right 20px

#nba
  padding-bottom 16px


#navbar a
  float left
  display block
  color #f2f2f2
  text-align center
  padding 14px 16px
  text-decoration none

#navbar span
  color white
  font-size 2em
  text-transform uppercase
  font-family Helvetica, "Trebuchet MS"
  text-decoration none
  padding: 10px

#nb-items
  float right
  text-align center
  text-decoration none

#nb-items:hover
  opacity 0.8
  cursor pointer
  color black
  background-color red
  margin-left -20px
  padding-left 20px
  padding-right 20px

#nb-items *
  padding-left 20px
  text-decoration none

.form-box
  width 50%
  margin 0px 25%
  box-shadow 0px 0px 20px #CCC
  padding 30px
  margin-top 150px

.fb-item
  margin 20px

.fb-item input
  width 100%
  font-size 1.2em

.fb-item input:focus
  background #E6E6FA

#submit
  bottom 0
  left 0
  width 100%
  background #7d7e7d
  background -moz-linear-gradient(top, #7d7e7d 0%, #0e0e0e 100%)
  background -webkit-linear-gradient(top, #7d7e7d 0%,#0e0e0e 100%)
  background linear-gradient(to bottom, #7d7e7d 0%,#0e0e0e 100%)
  padding 20px
  text-align center
  color white
  font-size 1.4em
  text-transform uppercase
  border none

#submit:hover
  opacity 0.8
  cursor pointer
  color red

#sub
  width 80%
  background -webkit-linear-gradient(-68deg, #ac32e4 , #4801ff)
  background -o-linear-gradient(-68deg, #ac32e4 , #4801ff)
  background -moz-linear-gradient(-68deg, #ac32e4 , #4801ff)
  background linear-gradient(-68deg, #ac32e4 , #4801ff)
  padding 20px
  text-align center
  color white
  font-size 0.5em
  text-transform uppercase
  border none

#sub:hover
  opacity 0.8
  cursor pointer

#restaurantInfo
  background #fc4a1a
  background -webkit-linear-gradient(to right, #fc4a1a, #f7b733);
  background linear-gradient(to right, #fc4a1a, #f7b733);
  overflow-wrap normal
  // width 500px
